// Sprint 1, entrega 1, nivell 1
var today = new Date(); // "2021-07-22"
var dd = today.getDate();
var mm = today.getMonth() + 1; //remember the 0 index
var yyyy = today.getFullYear();

if (dd <10) {
  dd = "0" + dd;
}
  
if (mm <10) {
  mm = "0" + mm;
}

today = dd + "/" + mm + "/" + yyyy

console.log(today);

